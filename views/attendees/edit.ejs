<% layout('layouts/main') -%>

<h1 class="mb-3">Edit Guest</h1>

<form method="post" action="/attendees/<%= guest.id %>/edit">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" value="<%= guest.name %>" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Phone</label>
    <input name="phone" value="<%= guest.phone || '' %>" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Scans</label>
    <input name="scans" value="<%= guest.scans %>" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Type</label>
    <select name="type" class="form-select">
      <option value="single" <%= guest.type==='single'?'selected':'' %>>Single</option>
      <option value="double" <%= guest.type==='double'?'selected':'' %>>Double</option>
    </select>
  </div>
  <button class="btn btn-primary">Save</button>
  <a class="btn btn-link" href="/attendees">Cancel</a>
</form>
